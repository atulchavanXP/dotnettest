@model TestApp_MVC.Models.StudentViewModel
<div class="row">
    <div class="jumbotron">
        Student with 2nd Highest Pocket Money
    </div>
    <div class="col-md-12" style="border: 0px solid black; background-color: WhiteSmoke;">
        @if (Model != null && !string.IsNullOrEmpty(Model.FirstName))
        {
            <table>
                <tr id="TaxReturn">
                    <td class="editor-label" style="padding-left:20px">
                        @Html.Label("Name: ")
                    </td>
                    <td class="editor-field">
                        @Html.DisplayFor(student => student.FirstName)  @Html.DisplayFor(student => student.LastName)
                    </td>
                </tr>

                <tr>
                    <td class="editor-label" style="padding-left:20px">
                        @Html.Label("Email: ")
                    </td>
                    <td class="editor-field">
                        @Html.DisplayFor(student => student.Email)
                    </td>
                </tr>

                <tr>
                    <td class="editor-label" style="padding-left:20px">
                        @Html.Label("Pocket Money: ")
                    </td>
                    <td class="editor-field">
                        @Html.DisplayFor(student => student.PocketMoney)
                    </td>
                </tr>
            </table>
        }

    </div>
</div>
